{
    // Configurações do editor de código
    "editor": {
      "fontSize": 14,
      //"lineHeight": 22,
      "rulers": [120, 120],
      "fontFamily": "Operator Mono Lig, 'Fira Code', Consolas, 'Dank Mono', 'Source Code Pro', Menlo, 'Inconsolata', 'Droid Sans Mono', 'DejaVu Sans Mono', 'Ubuntu Mono', 'Courier New', Courier, Monaco, monospace",
      "fontLigatures": true
    },
  
    // Configurações do ambiente de trabalho do VS Code
    "workbench": {
      "startupEditor": "none",
      "preferredDarkColorTheme": "Visual Studio Dark",
      "preferredHighContrastLightColorTheme": "Default High Contrast",
      "preferredLightColorTheme": "Default High Contrast",
      "tree": {
        "indent": 8
      },
      //"colorTheme": "Evondev Dracula Darker Contrast",
      "iconTheme": "material-icon-theme",
      "colorCustomizations": {
        //"tab.activeBackground": "#000000",
        //"activityBar.background": "#000000",
        //"sideBar.background": "#000000",
        //"editor.background": "#000000",
        //"statusBar.background": "#000000",
        // Configurações de Tema - Terminal
        //"terminal.background": "#000000"
      },
      "editorAssociations": {
        "*.html": "default"
      }
    },
  
    // Configurações do controle de versão Git
    "git": {
      "autofetch": true,
      "openRepositoryInParentFolders": "never"
    },
  
    "hediet.vscode-drawio.resizeImages": null,
  
    // Configurações do terminal integrado
    "terminal": {
      "integrated": {
        "fontFamily": ""
      }
    },
  
    // Configurações do Code Runner
    "code-runner": {
      "executorMap": {
        "python": "cls;python -u"
      },
      "runInTerminal": true,
      "ignoreSelection": true
    },
  
    // Outras configurações globais
    "editor.renderWhitespace": "all",
  
    // Configurações Python
    "[python]": {
      "editor.defaultFormatter": "ms-python.autopep8",
      "editor.tabSize": 4,
      "editor.insertSpaces": true,
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.unusedImports": true,
        "source.organizeImports": true
      }
    },
    "python": {
      "languageServer": "Pylance",
      "testing": {
        "unittestEnabled": false,
        "pytestEnabled": true
      },
      "analysis": {
        "diagnosticSeverityOverrides": {
          "reportUnknownMemberType": "none",
          "reportUnknownArgumentType": "none",
          "reportUnknownVariableType": "none",
          "reportUnknownLambdaType": "none",
          "reportUnknownParameterType": "none"
        },
        "typeCheckingMode": "basic"
      }
    },
    "cSpell": {
      "enabled": true
    },
    "workbench": {
      "colorTheme": "GitHub Dark"
    },
    "window": {
      "zoomLevel": -1
      //"python.formatting.provider": "none"
    },

  // Configurações de Verificação Ortográfica
  "cSpell.enabled": true,

  // Configurações de Formatação Python
  "python.formatting.provider": "none"
}